  <!-- Single button -->
<div class="row _center">
  <div class="btn-group">
    <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown">
      Năm {{currentYear.year}} <span class="caret"></span>
    </button>
    <ul class="dropdown-menu" role="menu">
      {{#each years}}
        <li {{action 'selectYear' _view.contentIndex}}><a>{{year}}</a></li>
      {{/each}}
    </ul>
  </div>

  <div class="btn-group">
    <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown">
      Tháng {{currentMonth.month}} <span class="caret"></span>
    </button>
    <ul class="dropdown-menu" role="menu">
      {{#each currentYear.months}}
        <li {{action 'selectMonth' _view.contentIndex}}><a>{{this}}</a></li>
      {{/each}}
    </ul>
  </div>

  <div class="btn-group">
    <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown">
      Server {{currentServer.server}}  <span class="caret"></span>
    </button>
    <ul class="dropdown-menu" role="menu">
      {{#each currentMonth.servers}}
        <li {{action 'selectServer' _view.contentIndex}}><a>{{this}}</a></li>
      {{/each}}
    </ul>
  </div>

  <div class="btn-group">
    <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown">
      Virus {{currentVirus.virus}}<span class="caret"></span>
    </button>
    <ul class="dropdown-menu" role="menu">
      {{#each currentServer.viruses}}
        <li {{action 'selectVirus' _view.contentIndex}}><a>{{this}}</a></li>
      {{/each}}
    </ul>
  </div>
    <!--<li><a href="#">Action</a></li>-->
      <!--<li><a href="#">Another action</a></li>-->
      <!--<li><a href="#">Something else here</a></li>-->
      <!--<li class="divider"></li>-->
      <!--<li><a href="#">Separated link</a></li>-->
</div>
<p><span class="label label-default">Số lượng nhiễm: {{currentVirus.clients.length}} {{currentVirus.clients.length:máy}}</span></p>
<div class="table-responsive">
  <table class="table table-striped table-bordered">
    <tr>
      <th>Tên Máy</th>
      <th>CPU</th>
      <th>Hệ Điều Hành</th>
      <th>IP</th>
    </tr>
    {{#each currentVirus.clients}}
      <tr>
        <td>{{ComputerName}}</td>
        <td>{{CPUName}}</td>
        <td>{{OSName}}</td>
        <td>{{IP}}</td>
      </tr>
    {{/each}}
  </table>
</div>
