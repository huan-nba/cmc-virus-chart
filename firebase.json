{
  "firebase": "cmc-chart-virus",
  "public": "dist",
  "ignore": [
    "firebase.json",
    "**/.*",
    "**/node_modules/**"
  ],
  "headers": [ {
    "source" : "**/*.@(eot|otf|ttf|ttc|woff)",
    "headers" : [ {
      "key" : "Access-Control-Allow-Origin",
      "value" : "*"
    } ]
  }, {
    "source" : "**/*.@(js|css)",
    "headers" : [ {
      "key" : "Cache-Control",
      "value" : "max-age=31000000"
    } ]
  }, {
    "source" : "**/*.@(jpg|jpeg|gif|png|svg|ico)",
    "headers" : [ {
      "key" : "Cache-Control",
      "value" : "max-age=2500000"
    } ]
  } ]

}
